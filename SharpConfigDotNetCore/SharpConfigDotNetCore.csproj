    <AssemblyName>SharpConfig</AssemblyName>
    <RootNamespace>SharpConfig</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>..\bin\DotNetCore\Debug\</OutputPath>
