  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>..\bin\DotNetCore\Release\</OutputPath>
    <DocumentationFile>..\bin\DotNetCore\Release\netcoreapp2.0\SharpConfig.xml</DocumentationFile>
  </PropertyGroup>

  <Import Project="..\SharpConfigShared\SharpConfigShared.projitems" Label="Shared" />

</Project>
